{
  "name": "sidekick-pro",
  "displayName": "Sidekick Pro",
  "description": "AI-powered development assistant",
  "version": "0.1.0",
  "publisher": "naveen",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidekickPro-chat",
          "title": "Sidekick Pro Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "sidekickPro-chat": [
        {
          "type": "webview",
          "id": "sidekickPro.copilotChat",
          "name": "Chat",
          "icon": "$(comment-discussion)",
          "contextualTitle": "Sidekick Pro Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "sidekick.chat.open",
        "title": "Sidekick Pro: Open Chat"
      },
      {
        "command": "sidekick-ai.openChat",
        "title": "Sidekick Pro: Open Chat",
        "category": "Sidekick AI"
      },
      {
        "command": "sidekick.switchModel",
        "title": "Sidekick Pro: Switch Model"
      },
      {
        "command": "sidekick-ai.switchProvider",
        "title": "Switch AI Provider",
        "category": "Sidekick AI"
      },
      {
        "command": "sidekick.search",
        "title": "Sidekick Pro: Search Repository"
      },
      {
        "command": "sidekick.dashboard.open",
        "title": "Sidekick Pro: Open Dashboard"
      },
      {
        "command": "sidekick.index",
        "title": "Sidekick Pro: Index Repository"
      },
      {
        "command": "sidekick-ai.explainCode",
        "title": "Explain Code",
        "category": "Sidekick AI",
        "icon": "$(lightbulb)"
      },
      {
        "command": "sidekick-ai.refactorCode",
        "title": "Refactor with AI",
        "category": "Sidekick AI",
        "icon": "$(edit)"
      },
      {
        "command": "sidekick-ai.generateTests",
        "title": "Generate Tests",
        "category": "Sidekick AI",
        "icon": "$(edit)"
      },
      {
        "command": "sidekick-ai.fixError",
        "title": "Fix with AI",
        "category": "Sidekick AI",
        "icon": "$(bug)"
      },
      {
        "command": "sidekick-ai.explainError",
        "title": "Explain Error",
        "category": "Sidekick AI",
        "icon": "$(lightbulb)"
      },
      {
        "command": "sidekick-ai.privacyStatus",
        "title": "Privacy Status",
        "category": "Sidekick AI",
        "icon": "$(lock)"
      },
      {
        "command": "sidekick-pro.toggleCompletions",
        "title": "Toggle AI Completions",
        "category": "Sidekick Pro",
        "icon": "$(sparkle)"
      },
      {
        "command": "sidekick-pro.clearCompletionCache",
        "title": "Clear Completion Cache",
        "category": "Sidekick Pro"
      },
      {
        "command": "sidekick-pro.completionStats",
        "title": "Show Completion Statistics",
        "category": "Sidekick Pro"
      },
      {
        "command": "sidekickPro.openInlineChat",
        "title": "Open Inline Chat",
        "category": "Sidekick Pro",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "sidekickPro.addToChat",
        "title": "Add to Chat",
        "category": "Sidekick Pro"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sidekick-ai.explainCode",
          "when": "editorHasSelection",
          "group": "1_sidekickAI@1"
        },
        {
          "command": "sidekick-ai.refactorCode",
          "when": "editorHasSelection",
          "group": "1_sidekickAI@2"
        },
        {
          "command": "sidekick-ai.generateTests",
          "when": "editorTextFocus",
          "group": "1_sidekickAI@3"
        },
        {
          "command": "sidekick-ai.fixError",
          "when": "editorHasSelection",
          "group": "1_sidekickAI@4"
        },
        {
          "command": "sidekickPro.addToChat",
          "when": "editorHasSelection",
          "group": "1_sidekickpro@5"
        }
      ],
      "commandPalette": [
        {
          "command": "sidekick-ai.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "sidekick-ai.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "sidekick-ai.generateTests",
          "when": "editorTextFocus"
        },
        {
          "command": "sidekick-ai.fixError",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sidekick-ai.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "sidekick-ai.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "sidekick-ai.refactorCode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorHasSelection"
      },
      {
        "command": "sidekick-ai.generateTests",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "sidekick-pro.toggleCompletions",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space"
      },
      {
        "command": "sidekick-pro.testCompletion",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t"
      },
      {
        "command": "sidekickPro.openInlineChat",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y"
      },
      {
        "command": "sidekickPro.addToChat",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Sidekick Pro",
      "properties": {
        "sidekick-pro.openaiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key",
          "scope": "application"
        },
        "sidekick-pro.provider": {
          "type": "string",
          "enum": [
            "openai",
            "local"
          ],
          "default": "local",
          "description": "Model provider",
          "scope": "application"
        },
        "sidekick-ai.modelPath": {
          "type": "string",
          "default": "",
          "description": "Path to the GGUF model file for local AI"
        },
        "sidekick-ai.llamaPath": {
          "type": "string",
          "default": "",
          "description": "Path to llama.cpp server executable"
        },
        "sidekick-ai.port": {
          "type": "number",
          "default": 8080,
          "description": "Port for the llama.cpp server"
        },
        "sidekick-ai.contextSize": {
          "type": "number",
          "default": 4096,
          "description": "Context size for the model"
        },
        "sidekick-ai.useGpu": {
          "type": "boolean",
          "default": false,
          "description": "Use GPU acceleration if available"
        },
        "sidekickPro.enableCompletions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code completions"
        },
        "sidekickPro.completionTriggerDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Delay in milliseconds before triggering completions"
        },
        "sidekickPro.completionMaxTokens": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 500,
          "description": "Maximum tokens for code completions"
        },
        "sidekickPro.completionTemperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for completion generation (0 = deterministic, 1 = creative)"
        },
        "sidekickPro.completion.debounceDelay": {
          "type": "number",
          "default": 800,
          "minimum": 300,
          "maximum": 2000,
          "description": "Delay in milliseconds before triggering completion after typing stops"
        },
        "sidekickPro.completion.minCharacters": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 10,
          "description": "Minimum number of characters before triggering completions"
        },
        "sidekickPro.completion.maxRequestsPerMinute": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 60,
          "description": "Maximum API requests per minute (rate limiting)"
        },
        "sidekickPro.completion.cacheTimeout": {
          "type": "number",
          "default": 60000,
          "minimum": 10000,
          "maximum": 300000,
          "description": "Cache timeout in milliseconds (default: 1 minute)"
        },
        "sidekickPro.completion.enableQuickPatterns": {
          "type": "boolean",
          "default": true,
          "description": "Use quick pattern matching for common code structures"
        },
        "sidekickPro.completion.skipComments": {
          "type": "boolean",
          "default": true,
          "description": "Skip completions when typing comments"
        },
        "sidekickPro.completion.skipStrings": {
          "type": "boolean",
          "default": true,
          "description": "Skip completions when typing inside strings"
        },
        "sidekickPro.completion.requestTimeout": {
          "type": "number",
          "default": 2000,
          "minimum": 500,
          "maximum": 5000,
          "description": "Timeout for API requests in milliseconds"
        },
        "sidekickPro.completion.contextLines": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Number of context lines to send with completion requests"
        },
        "sidekickPro.autocomplete.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered autocomplete"
        },
        "sidekickPro.autocomplete.debounceDelay": {
          "type": "number",
          "default": 1000,
          "minimum": 500,
          "maximum": 3000,
          "description": "Delay in milliseconds before making completion request"
        },
        "sidekickPro.autocomplete.minRequestInterval": {
          "type": "number",
          "default": 500,
          "minimum": 200,
          "maximum": 2000,
          "description": "Minimum time between API requests in milliseconds"
        },
        "sidekickPro.autocomplete.maxRequestsPerMinute": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 30,
          "description": "Maximum API requests per minute"
        },
        "sidekickPro.autocomplete.temperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "description": "Model temperature for completions (lower = more deterministic)"
        },
        "sidekickPro.autocomplete.cacheTimeout": {
          "type": "number",
          "default": 60000,
          "minimum": 10000,
          "maximum": 300000,
          "description": "Cache timeout in milliseconds"
        },
        "sidekickPro.autocomplete.enablePatternMatching": {
          "type": "boolean",
          "default": true,
          "description": "Enable instant pattern-based completions (no API calls)"
        },
        "sidekickPro.autocomplete.minPrefixLength": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 10,
          "description": "Minimum characters before triggering autocomplete"
        }
        
      }
    }
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  }
}
