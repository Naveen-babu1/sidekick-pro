{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "extension/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["extension/src/**/*"],
  "exclude": ["node_modules",
    "**/*.test.ts",
    "**/*.original.ts",
    "extension/src/test/**/*"
  ]
}
