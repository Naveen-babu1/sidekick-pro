{
  "name": "sidekick-pro",
  "displayName": "Sidekick Pro",
  "description": "AI-powered development assistant",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/main.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "sidekick-ai.explainCode",
        "title": "Explain Code",
        "category": "Sidekick AI"
      },
      {
        "command": "sidekick-ai.refactorCode",
        "title": "Refactor with AI",
        "category": "Sidekick AI"
      },
      {
        "command": "sidekick-ai.generateTests",
        "title": "Generate Tests",
        "category": "Sidekick AI"
      },
      {
        "command": "sidekick-ai.openChat",
        "title": "Open AI Chat",
        "category": "Sidekick AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sidekick-ai.explainCode",
          "when": "editorHasSelection",
          "group": "sidekickAI@1"
        },
        {
          "command": "sidekick-ai.refactorCode",
          "when": "editorHasSelection",
          "group": "sidekickAI@2"
        },
        {
          "command": "sidekick-ai.generateTests",
          "when": "editorTextFocus",
          "group": "sidekickAI@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sidekick-ai.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "sidekick-ai.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
